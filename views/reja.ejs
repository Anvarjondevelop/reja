<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reja</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
  </head>
  <body style="background: #b8bbd1">
    <div class="container">
      <h1 class="display-3 text-center py-2">Plans List</h1>

      <div
        class="jumbotron p-3 shadow-sm"
        style="background-color: white; border-radius: 8px"
      >
        <form action="/create-item" id="create-form" method="POST">
          <div class="d-flex align-items-center" style="gap: 10px">
            <input
              type="text"
              placeholder="Write your plans"
              id="create-field"
              name="reja"
              autofocus
              autocomplete="off"
              class="form-control mr-3"
              type="text"
              style="flex: 1"
            />
            <button class="btn btn-primary" style="border-radius: 20px">
              add new plan
            </button>
          </div>
        </form>
      </div>

      <ul id="item-list" class="list-group pb-5">
        <% items.map((item)=>{%>

        <li
          class="list-group-item list-group-item-info d-flex align-items-center justify-content-between"
        >
          <span class="item-text"><%= item.reja%></span>
          <div>
            <!-- endi har bir item id sini btnlarga biriktirib qpyamiz -->
            <button
              data-id="<%=item._id%>"
              class="edit-me btn btn-secondary"
              btn-sm
              mr-1
            >
              edit
            </button>
            <button
              data-id="<%=item._id%>"
              class="delete-me btn btn-danger"
              btn-sm
            >
              delete
            </button>
          </div>
        </li>

        <% })%>
      </ul>

      <button id="clean-all" class="btn btn-danger" style="border-radius: 20px">
        Delete All
      </button>
    </div>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <script src="/browser.js"></script>
  </body>
</html>
